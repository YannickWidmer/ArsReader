<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseText" parent="android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#e1262623</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="paragraph" parent="BaseText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="h1" parent="BaseText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="h2" parent="BaseText">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="h3" parent="BaseText">
        <item name="android:textSize">18sp</item>
    </style>



    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BaseTextGreyedout" parent="BaseText">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="BaseTextSmall" parent="BaseText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="BaseTextAuthor" parent="BaseText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>




</resources>
